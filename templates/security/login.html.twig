{% extends 'base.html.twig' %}

{% block title %}Blastpheme Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="text-center">
        <form class="form-signin" method="post">
            <img class="mb-4" src="{{ asset('build/images/bp_logo.svg') }}" alt="logo" width="100" height="100">
            <h1 class="h3 mb-3 font-weight-normal">Blast'Login</h1>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            <input type="password" name="password"  id="inputPassword" class="form-control my-2"  placeholder="Mot de passe " required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {# <div class="d-flex justify-content-center" >
                <a href="{{ path('app_forgot_password_request') }}" class="link-danger my-2">Mot de passe oublier</a>
            </div> #}
            <button class="btn btn-lg btn-primary btn-block my-2" type="submit">Connexion</button>
        </form>
    </div>
{% endblock %}